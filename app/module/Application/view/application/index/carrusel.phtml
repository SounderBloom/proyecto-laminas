<script>
// Referencias a elementos
const inputFile = document.getElementById('input_agregar_imagen');
const labelFile = document.getElementById('lbl_agregar_imagen');
const btnSubir   = document.querySelector('form button[type="submit"]'); // el botón Subir
const btnEliminar = document.getElementById('btnEliminarImagenes');

// Iniciar botón Subir deshabilitado
btnSubir.disabled = true;
btnSubir.style.opacity = '0.6'; // visual: se ve apagado

// Lista de extensiones permitidas (puedes ampliarla)
const allowedExtensions = [
    'jpg', 'jpeg', 'png', 'gif', 'webp', 'bmp', 'tiff', 'svg'
];

// Función para validar si es imagen
function isValidImage(file) {
    if (!file) return false;

    // 1. Validación por extensión (más confiable en algunos navegadores)
    const ext = file.name.split('.').pop().toLowerCase();
    if (allowedExtensions.includes(ext)) {
        return true;
    }

    // 2. Validación extra por MIME type (más segura)
    const validMime = [
        'image/jpeg', 'image/png', 'image/gif', 'image/webp',
        'image/bmp', 'image/tiff', 'image/svg+xml'
    ];
    return validMime.includes(file.type);
}

// Evento change del input file
inputFile.addEventListener('change', () => {
    const file = inputFile.files[0];

    if (!file) {
        labelFile.innerHTML = 'Agregar Imagen';
        btnSubir.disabled = true;
        btnSubir.style.opacity = '0.6';
        return;
    }

    // Mostrar nombre del archivo
    labelFile.innerHTML = file.name;

    // Validar
    if (isValidImage(file)) {
        btnSubir.disabled = false;
        btnSubir.style.opacity = '1';
        labelFile.style.color = ''; // color normal
    } else {
        btnSubir.disabled = true;
        btnSubir.style.opacity = '0.6';
        labelFile.innerHTML = `⚠️ ${file.name} (no es imagen válida)`;
        labelFile.style.color = 'red';

        // Opcional: alerta o tooltip más visible
        alert('Solo se permiten archivos de imagen (.jpg, .png, .gif, .webp, etc.)');
        
        // Limpiar input para que no quede archivo inválido seleccionado
        inputFile.value = '';
        labelFile.innerHTML = 'Agregar Imagen';
        labelFile.style.color = '';
    }
});

// Mantener el código del botón eliminar (sin cambios)
document.getElementById('btnEliminarImagenes').addEventListener('click', function () {
    if (!confirm('¿Seguro que deseas eliminar todas las imágenes?')) {
        return;
    }
    fetch('<?= $this->url('application', ['action' => 'eliminarImagenes']) ?>', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
        },
    })
    .then(response => {
        if (!response.ok) {
            return response.text().then(text => {
                console.log('Respuesta no OK:', response.status, text);
                throw new Error(`Error ${response.status}: ${text}`);
            });
        }
        return response.json();
    })
    .then(data => {
        alert(data.message);
        location.reload();
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Ocurrió un error: ' + error.message);
    });
});
</script>